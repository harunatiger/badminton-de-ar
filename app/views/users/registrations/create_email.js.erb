<% if @status == "success" %>
  window.location.href = "<%=root_path %>";
<% elsif @status == "failure" %>
  $("#error_message").html($("<%=j render partial: 'shared/modals/error_message', locals: {target: @user} %>").hide().fadeIn("slow"));
  targetForm = $('.email_register').closest('form')
  spinner = $('.spinner', targetForm)
  spinner.spin(false);
  $('.btn-frame > .btn', targetForm).removeClass('text-disappear')
<% end %>