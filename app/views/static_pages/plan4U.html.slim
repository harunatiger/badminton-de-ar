          = render partial: 'shared/listing_card', locals: { profile: listing_to_profile(listings[44]), listing: listings[44]}
        - else
          .tour-listing-empty.text-center.text-brand.text-black
      /.col-md-6.col-lg-4.row-space-4
        - if listings[321].present?
          = render partial: 'shared/listing_card', locals: { profile: listing_to_profile(listings[321]), listing: listings[321]}
        - else
          .tour-listing-empty.text-center.text-brand.text-black

