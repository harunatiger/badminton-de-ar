          - else
            li.help-category-item.anchor-scroll
              = link_to :anchor => "category-#{c.id}" do
                = c.name
                i.fa.fa-angle-right
    ul.help-nav-footer.text-center
      li
        = link_to I18n.t("help.help_other_link"), '#', class: 'help_other_trigger'
