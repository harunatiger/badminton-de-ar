#help-nav
  ul.text-center.help-nav-header
    li.btn
      =<> link_to "Japanese", url_for(params.merge(locale: 'ja'))
      | /
      =<> link_to "English", url_for(params.merge(locale: 'en'))
  h2.h3
    | Q & A
  .about-link
    ul
      li.about-link-item
        = link_to static_pages_about_path, class: '' do
          = I18n.t("help.about_link")
          i.fa.fa-angle-right
  .help_other_list
    ul
      - if categories_other.present?
        /- help_type = categories.first.parent_id
        - categories_other.each do |c|
          - if c.children.present?
            - parent_anchor = c.children.first.id
            li.help-category-item
              .collapse-trigger.parent-category
                = link_to :anchor => "category-#{c.id}" do
                  = c.name
                  i.fa.fa-angle-right
              ul.collapse.child-category
                - c.children.each do |cc|
                  li.help-category-item-children.anchor-scroll
                    = link_to :anchor => "category-#{cc.id}" do
                      = cc.name
                      i.fa.fa-angle-right
          - else
            li.help-category-item.anchor-scroll
              = link_to :anchor => "category-#{c.id}" do
                = c.name
                i.fa.fa-angle-right
    ul.help-nav-footer.text-center
      li
        = link_to I18n.t("help.help_guide_link"), '#', class: 'help_guide_trigger'
  .help_guide_list
